<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="project.controller.MainController">
    <VBox prefHeight="600" prefWidth="1300" alignment="CENTER">
        <Label fx:id="mainPageTitle" text="Inventory" />
        <HBox prefHeight="600" prefWidth="600" alignment="CENTER">
            <VBox prefHeight="600" prefWidth="600" alignment="CENTER" >
                <HBox.margin>
                    <Insets right="5" />
                </HBox.margin>
                <Label fx:id="partTableTitle" text="Parts" />
                <TableView fx:id="partTable">
                    <columns>
                        <TableColumn fx:id="partIdColumn" prefWidth="100" text="Part ID" />
                        <TableColumn fx:id="partNameColumn" prefWidth="100" text="Part Name" />
                        <TableColumn fx:id="partPriceColumn" prefWidth="100" text="Part Price" />
                        <TableColumn fx:id="partStockColumn" prefWidth="100" text="Stock" />
                        <TableColumn fx:id="partMinStockColumn" prefWidth="100" text="Min in Stock" />
                        <TableColumn fx:id="partMaxStockColumn" prefWidth="100" text="Max in Stock" />
                    </columns>
                </TableView>
                <Label fx:id="partSearchResultInformationBar" text="Search by part name or ID." />
                <TextField
                        fx:id="partSearchBar"
                        onKeyTyped="#searchParts"
                />
                <HBox alignment="CENTER">
                    <Button fx:id="addPartButton" text="Add"
                        onAction="#addPart">
                    </Button>
                    <Button fx:id="modifyPartButton" text="Modify"
                        onAction="#modifyPart">
                    </Button>
                    <Button fx:id="deletePartButton" text="Delete"
                        onAction="#deletePart">
                    </Button>
                </HBox>
            </VBox>
            <VBox prefHeight="600" prefWidth="600" alignment="CENTER" >
                <HBox.margin>
                    <Insets left="5" />
                </HBox.margin>
                <Label fx:id="productTableTitle" text="Products" />
                <TableView fx:id="productTable">
                    <columns>
                        <TableColumn fx:id="productIdColumn" prefWidth="100" text="Product ID" />
                        <TableColumn fx:id="productNameColumn" prefWidth="100" text="Product Name" />
                        <TableColumn fx:id="productPriceColumn" prefWidth="100" text="Product Price" />
                        <TableColumn fx:id="productStockColumn" prefWidth="100" text="Stock" />
                        <TableColumn fx:id="productMinStockColumn" prefWidth="100" text="Min in Stock" />
                        <TableColumn fx:id="productMaxStockColumn" prefWidth="100" text="Max in Stock" />
                    </columns>
                </TableView>
                <Label fx:id="productSearchResultInformationBar" text="Search by product name or ID."/>
                <TextField
                        fx:id="productSearchBar"
                        onKeyTyped="#searchProducts"
                />
                <HBox alignment="CENTER">
                    <Button fx:id="addProductButton" text="Add"
                        onAction="#addProduct">
                    </Button>
                    <Button fx:id="modifyProductButton" text="Modify"
                        onAction="#modifyProduct">
                    </Button>
                    <Button
                        fx:id="deleteProductButton"
                        text="Delete"
                        onAction="#deleteProduct">
                    </Button>
                </HBox>
            </VBox>
        </HBox>
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <Button
                onAction="#exit"
                text="Exit"
                alignment="BASELINE_RIGHT"
        />
    </VBox>

</AnchorPane>


