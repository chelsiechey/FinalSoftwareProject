<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="project.controller.AddProductController">

    <VBox alignment="CENTER">
        <Label text="Add Product"/>
        <HBox alignment="CENTER">
            <VBox>
                <Label text="ID" />
                <TextField fx:id="productIdTextField" disable="true" />
            </VBox>
            <VBox>
                <Label text="Name"/>
                <TextField fx:id="productNameTextField"/>
            </VBox>
            <VBox>
                <Label text="Price"/>
                <TextField fx:id="productPriceTextField"/>
            </VBox>
            <VBox>
                <Label text="Stock"/>
                <TextField fx:id="productStockTextField"/>
            </VBox>
            <VBox>
                <Label text="Min"/>
                <TextField fx:id="productMinTextField"/>
            </VBox>
            <VBox>
                <Label text="Max"/>
                <TextField fx:id="productMaxTextField"/>
            </VBox>
        </HBox>
        <Label text="All Parts"/>
        <HBox alignment="CENTER" >
            <TableView fx:id="partTable" maxHeight="200">
                <columns>
                    <TableColumn fx:id="partIdColumn" prefWidth="100" text="Part ID" />
                    <TableColumn fx:id="partNameColumn" prefWidth="100" text="Part Name" />
                    <TableColumn fx:id="partPriceColumn" prefWidth="100" text="Part Price" />
                    <TableColumn fx:id="partStockColumn" prefWidth="100" text="Stock" />
                    <TableColumn fx:id="partMinStockColumn" prefWidth="100" text="Min in Stock" />
                    <TableColumn fx:id="partMaxStockColumn" prefWidth="100" text="Max in Stock" />
                </columns>
            </TableView>
        </HBox>
        <VBox alignment="CENTER">
            <Label fx:id="partSearchResultInformationBar" text="Search by part name or ID." />
            <TextField
                fx:id="partSearchBar"
                onKeyTyped="#searchParts"
            />
            <Button
                fx:id="addAssociatedPartButton"
                text="Add to Associated Parts"
                onAction="#addAssociatedPart"
            />
        </VBox>
        <Label text="Associated Parts" />
        <HBox alignment="CENTER" >
            <TableView fx:id="associatedPartsTable" maxHeight="200">
                <columns>
                    <TableColumn fx:id="associatedPartIdColumn" prefWidth="100" text="Part ID" />
                    <TableColumn fx:id="associatedPartNameColumn" prefWidth="100" text="Part Name" />
                    <TableColumn fx:id="associatedPartPriceColumn" prefWidth="100" text="Part Price" />
                    <TableColumn fx:id="associatedPartStockColumn" prefWidth="100" text="Stock" />
                    <TableColumn fx:id="associatedPartMinStockColumn" prefWidth="100" text="Min in Stock" />
                    <TableColumn fx:id="associatedPartMaxStockColumn" prefWidth="100" text="Max in Stock" />
                </columns>
            </TableView>
        </HBox>
        <Button
            fx:id="removeAssociatedPartButton"
            text="Remove from Associated Parts"
            onAction="#removeAssociatedPart"
        />
        <HBox alignment="CENTER">
            <Button
                fx:id="saveNewProduct"
                onAction="#saveNewProduct"
                text="Save"
            />
            <Button
                fx:id="exitAddProduct"
                onAction="#exitAddProduct"
                text="Exit"
            />
        </HBox>
    </VBox>
</AnchorPane>
